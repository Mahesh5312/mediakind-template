resources:
- name: {{ env['MediakindOrganization'] }}
  type: iam.v1.serviceAccount
  properties:
    accountId: {{ env['mkappuser@gmail.com'] }}
    displayName: serviceAccount-{{ env['MediakindOrganization.admin'] }}

resources:
- name: {{ properties['MediaKindDevTeam'] }}
type: gcp-types/cloudresourcemanager-v2:mediakindDevteam
properties:
{% if properties['MediakindOrganization'] == "yes" %}
parent: MediakindOrganization/{{ properties['orgid'] }}
{% else %}
parent: mediakindDevteam/{{ properties['parentfolderid'] }}
{% endif %}
displayName: {{ properties['MediaKindDevTeam'] }}

